<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Name Section -->
        <TextView android:text="First Name:" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/firstNameTextView" style="@style/ProfileValue"/>

        <TextView android:text="Last Name:" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/lastNameTextView" style="@style/ProfileValue"/>

        <!-- Email -->
        <TextView android:text="Email:" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/emailTextView" style="@style/ProfileValue"/>

        <!-- Editable Fields -->
        <TextView android:text="Bio:" style="@style/ProfileLabel"/>
        <EditText
            android:id="@+id/bioEditText"
            style="@style/ProfileEdit"
            android:hint="Enter bio" />

        <TextView android:text="Gender:" style="@style/ProfileLabel"/>
        <EditText
            android:id="@+id/genderEditText"
            style="@style/ProfileEdit"
            android:hint="Enter gender" />

        <!-- Password Fields -->
        <TextView android:text="Old Password:" style="@style/ProfileLabel"/>
        <EditText
            android:id="@+id/oldPasswordEditText"
            style="@style/ProfileEdit"
            android:hint="Enter old password"
            android:inputType="textPassword" />

        <TextView android:text="New Password:" style="@style/ProfileLabel"/>
        <EditText
            android:id="@+id/newPasswordEditText"
            style="@style/ProfileEdit"
            android:hint="Enter new password"
            android:inputType="textPassword" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Info"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2563EB"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="12dp"
            android:backgroundTint="#2563EB"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
